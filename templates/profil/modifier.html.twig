{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<main class="profil-container">
    <div class="profil-box">
        <h1>Modifier mes informations</h1>

        {{ form_start(form, {'attr': {'class': 'profil-form'}}) }}
            <div class="form-group">
                {{ form_label(form.nom, 'Nom') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.prenom, 'Prénom') }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prenom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.telephone, 'Téléphone') }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.telephone) }}
            </div>

            <div class="form-group">
                {{ form_label(form.animalPoss, 'Animaux possédés') }}
                {{ form_widget(form.animalPoss, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.animalPoss) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password, 'Nouveau mot de passe') }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Laissez vide si inchangé'}}) }}
                {{ form_errors(form.password) }}
            </div>

            <div class="profil-btn">
                <button type="submit" class="btn-save">Enregistrer les modifications</button>
            </div>
        {{ form_end(form) }}
    </div>
</main>
{% endblock %}